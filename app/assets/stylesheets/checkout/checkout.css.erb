table.checkout_protocol_table td { padding-right: 6px; vertical-align: middle; /* Double the border with of text input boxes */ }
table.checkout_protocol_table td.protocol_access { padding-right: 0; }
table.checkout_protocol_table td input[type=text], .checkout_protocol_table td select { width: 100%; }
table.checkout_protocol_table td.protocol_delete { width: 16px; }

table.checkout_protocol_table td.protocol_append_path,
table.checkout_protocol_table td.protocol_is_default,
table.checkout_protocol_table td.protocol_display_login {
  text-align: center;
}

.icon-changeset { background-image: url(<%= asset_path 'checkout/changeset.png' %>);}

.repository-info {
  background-color: #eee;
  border: 1px solid #E4E4E4;
  padding: 0 10px;
  margin: 4px 0 10px;
}

.bottomline {
  border-bottom: 1px solid #ccc;
}

#checkout_box {
  margin: 10px 0;
}

#checkout_box p {
  color: #666;
  line-height: 23px;
  font-size: 11px;
  margin: 0 0 0 5px;
}

span#checkout_access {
  font-weight: bold;
}

#content fieldset.collapsible.header_collapsible {
  margin-top: 10px;
}
